<?xml version="1.0" encoding="UTF-8"?>

<!-- Complex Multi-Intersection Traffic Network Configuration -->
<!-- Features: Multiple intersections, diverse vehicle types, realistic traffic patterns -->

<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/sumoConfiguration.xsd">

    <input>
        <net-file value="complex_network.net.xml"/>
        <route-files value="complex_routes.rou.xml"/>
    </input>

    <output>
        <summary-output value="complex_simulation_summary.xml"/>
        <tripinfo-output value="complex_tripinfo.xml"/>
        <vehroute-output value="complex_vehroutes.xml"/>
        <lanechange-output value="complex_lanechanges.xml"/>
    </output>

    <time>
        <begin value="0"/>
        <end value="28800"/>  <!-- 8 hours simulation -->
        <step-length value="1"/>
    </time>

    <processing>
        <collision.action value="warn"/>
        <collision.check-junctions value="true"/>
        <max-depart-delay value="900"/>
        <routing-algorithm value="dijkstra"/>
        <device.rerouting.probability value="0.3"/>
        <device.rerouting.period value="300"/>
    </processing>

    <routing>
        <device.rerouting.adaptation-steps value="18"/>
        <device.rerouting.adaptation-interval value="10"/>
    </routing>

    <gui_only>
        <gui-settings-file value="complex_gui_settings.xml"/>
        <start value="true"/>
        <quit-on-end value="false"/>
        <game value="false"/>
    </gui_only>

    <traffic_light>
        <tls.all-off value="false"/>
        <tls.actuated.max-gap value="3.0"/>
        <tls.actuated.detector-gap value="2.0"/>
        <tls.delay_based.detector-range value="100"/>
    </traffic_light>

    <junctions>
        <junction-taz value="true"/>
        <junctions.join value="false"/>
        <junctions.corner-detail value="5"/>
    </junctions>

    <pedestrian>
        <pedestrian.model value="nonInteracting"/>
    </pedestrian>

    <report>
        <verbose value="true"/>
        <print-options value="true"/>
        <duration-log.statistics value="true"/>
        <no-step-log value="false"/>
    </report>

</configuration>