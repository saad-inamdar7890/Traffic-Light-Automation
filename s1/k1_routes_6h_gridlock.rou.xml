<?xml version="1.0" encoding="UTF-8"?>
<!--
    K1 Network - GRIDLOCK STRESS SCENARIO (6 hours)
    ================================================
    2.5× peak traffic volumes to test model under extreme congestion.
    Based on weekday patterns but with significantly higher demand.
-->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- ==================== GRIDLOCK: 2.5× PEAK TRAFFIC ==================== -->
    
    <!-- Route Group 1: E2 to E5 (Main corridor - HEAVY) -->
    <flow id="f_1_gridlock_early" from="E2" to="E5" begin="0" end="3600" vehsPerHour="375" type="passenger"/>
    <flow id="f_1_gridlock_morning" from="E2" to="E5" begin="3600" end="10800" vehsPerHour="750" type="passenger"/>
    <flow id="f_1_gridlock_midday" from="E2" to="E5" begin="10800" end="14400" vehsPerHour="500" type="passenger"/>
    <flow id="f_1_gridlock_afternoon" from="E2" to="E5" begin="14400" end="18000" vehsPerHour="625" type="passenger"/>
    <flow id="f_1_gridlock_evening" from="E2" to="E5" begin="18000" end="21600" vehsPerHour="750" type="passenger"/>

    <!-- Route Group 2: E5 to E2 (Reverse corridor - HEAVY) -->
    <flow id="f_2_gridlock_early" from="E5" to="E2" begin="0" end="3600" vehsPerHour="375" type="passenger"/>
    <flow id="f_2_gridlock_morning" from="E5" to="E2" begin="3600" end="10800" vehsPerHour="750" type="passenger"/>
    <flow id="f_2_gridlock_midday" from="E5" to="E2" begin="10800" end="14400" vehsPerHour="500" type="passenger"/>
    <flow id="f_2_gridlock_afternoon" from="E5" to="E2" begin="14400" end="18000" vehsPerHour="625" type="passenger"/>
    <flow id="f_2_gridlock_evening" from="E5" to="E2" begin="18000" end="21600" vehsPerHour="750" type="passenger"/>

    <!-- Route Group 3: E9 to E13 via major junctions -->
    <flow id="f_3_gridlock_early" from="E9" to="E13" via="E10 E11" begin="0" end="3600" vehsPerHour="250" type="passenger"/>
    <flow id="f_3_gridlock_morning" from="E9" to="E13" via="E10 E11" begin="3600" end="10800" vehsPerHour="500" type="passenger"/>
    <flow id="f_3_gridlock_midday" from="E9" to="E13" via="E10 E11" begin="10800" end="14400" vehsPerHour="375" type="passenger"/>
    <flow id="f_3_gridlock_afternoon" from="E9" to="E13" via="E10 E11" begin="14400" end="18000" vehsPerHour="450" type="passenger"/>
    <flow id="f_3_gridlock_evening" from="E9" to="E13" via="E10 E11" begin="18000" end="21600" vehsPerHour="500" type="passenger"/>

    <!-- Route Group 4: E13 to E9 (Reverse) -->
    <flow id="f_4_gridlock_early" from="E13" to="E9" via="E12 E11" begin="0" end="3600" vehsPerHour="250" type="passenger"/>
    <flow id="f_4_gridlock_morning" from="E13" to="E9" via="E12 E11" begin="3600" end="10800" vehsPerHour="500" type="passenger"/>
    <flow id="f_4_gridlock_midday" from="E13" to="E9" via="E12 E11" begin="10800" end="14400" vehsPerHour="375" type="passenger"/>
    <flow id="f_4_gridlock_afternoon" from="E13" to="E9" via="E12 E11" begin="14400" end="18000" vehsPerHour="450" type="passenger"/>
    <flow id="f_4_gridlock_evening" from="E13" to="E9" via="E12 E11" begin="18000" end="21600" vehsPerHour="500" type="passenger"/>

    <!-- Route Group 5: E0 to E8 (Cross traffic - HEAVY) -->
    <flow id="f_5_gridlock_early" from="E0" to="E8" begin="0" end="3600" vehsPerHour="300" type="passenger"/>
    <flow id="f_5_gridlock_morning" from="E0" to="E8" begin="3600" end="10800" vehsPerHour="625" type="passenger"/>
    <flow id="f_5_gridlock_midday" from="E0" to="E8" begin="10800" end="14400" vehsPerHour="450" type="passenger"/>
    <flow id="f_5_gridlock_afternoon" from="E0" to="E8" begin="14400" end="18000" vehsPerHour="550" type="passenger"/>
    <flow id="f_5_gridlock_evening" from="E0" to="E8" begin="18000" end="21600" vehsPerHour="625" type="passenger"/>

    <!-- Route Group 6: E8 to E0 (Reverse cross) -->
    <flow id="f_6_gridlock_early" from="E8" to="E0" begin="0" end="3600" vehsPerHour="300" type="passenger"/>
    <flow id="f_6_gridlock_morning" from="E8" to="E0" begin="3600" end="10800" vehsPerHour="625" type="passenger"/>
    <flow id="f_6_gridlock_midday" from="E8" to="E0" begin="10800" end="14400" vehsPerHour="450" type="passenger"/>
    <flow id="f_6_gridlock_afternoon" from="E8" to="E0" begin="14400" end="18000" vehsPerHour="550" type="passenger"/>
    <flow id="f_6_gridlock_evening" from="E8" to="E0" begin="18000" end="21600" vehsPerHour="625" type="passenger"/>

    <!-- Route Group 7: E1 to E14 (Diagonal - HEAVY) -->
    <flow id="f_7_gridlock_early" from="E1" to="E14" begin="0" end="3600" vehsPerHour="200" type="passenger"/>
    <flow id="f_7_gridlock_morning" from="E1" to="E14" begin="3600" end="10800" vehsPerHour="400" type="passenger"/>
    <flow id="f_7_gridlock_midday" from="E1" to="E14" begin="10800" end="14400" vehsPerHour="300" type="passenger"/>
    <flow id="f_7_gridlock_afternoon" from="E1" to="E14" begin="14400" end="18000" vehsPerHour="350" type="passenger"/>
    <flow id="f_7_gridlock_evening" from="E1" to="E14" begin="18000" end="21600" vehsPerHour="400" type="passenger"/>

    <!-- Route Group 8: E14 to E1 (Reverse diagonal) -->
    <flow id="f_8_gridlock_early" from="E14" to="E1" begin="0" end="3600" vehsPerHour="200" type="passenger"/>
    <flow id="f_8_gridlock_morning" from="E14" to="E1" begin="3600" end="10800" vehsPerHour="400" type="passenger"/>
    <flow id="f_8_gridlock_midday" from="E14" to="E1" begin="10800" end="14400" vehsPerHour="300" type="passenger"/>
    <flow id="f_8_gridlock_afternoon" from="E14" to="E1" begin="14400" end="18000" vehsPerHour="350" type="passenger"/>
    <flow id="f_8_gridlock_evening" from="E14" to="E1" begin="18000" end="21600" vehsPerHour="400" type="passenger"/>

    <!-- Heavy vehicles (trucks/buses) - increased for stress -->
    <flow id="f_truck_1_gridlock" from="E2" to="E13" begin="3600" end="18000" vehsPerHour="75" type="truck"/>
    <flow id="f_truck_2_gridlock" from="E13" to="E2" begin="3600" end="18000" vehsPerHour="75" type="truck"/>
    <flow id="f_bus_1_gridlock" from="E0" to="E5" begin="0" end="21600" vehsPerHour="50" type="bus"/>
    <flow id="f_bus_2_gridlock" from="E5" to="E0" begin="0" end="21600" vehsPerHour="50" type="bus"/>

</routes>
