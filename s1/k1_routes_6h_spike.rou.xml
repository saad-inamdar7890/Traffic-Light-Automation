<?xml version="1.0" encoding="UTF-8"?>
<!--
    K1 Network - SPIKE SCENARIO (6 hours)
    ======================================
    Sudden demand surge at hour 3 (10800-14400 seconds).
    Simulates unexpected event like concert ending, sports game, etc.
    Normal traffic until hour 3, then massive spike, then gradual return.
-->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- ==================== SPIKE: SUDDEN SURGE AT HOUR 3 ==================== -->
    
    <!-- Route Group 1: E2 to E5 -->
    <flow id="f_1_spike_early" from="E2" to="E5" begin="0" end="3600" vehsPerHour="100" type="passenger"/>
    <flow id="f_1_spike_buildup" from="E2" to="E5" begin="3600" end="10800" vehsPerHour="150" type="passenger"/>
    <flow id="f_1_spike_SURGE" from="E2" to="E5" begin="10800" end="14400" vehsPerHour="600" type="passenger"/>
    <flow id="f_1_spike_recovery" from="E2" to="E5" begin="14400" end="18000" vehsPerHour="300" type="passenger"/>
    <flow id="f_1_spike_evening" from="E2" to="E5" begin="18000" end="21600" vehsPerHour="150" type="passenger"/>

    <!-- Route Group 2: E5 to E2 -->
    <flow id="f_2_spike_early" from="E5" to="E2" begin="0" end="3600" vehsPerHour="100" type="passenger"/>
    <flow id="f_2_spike_buildup" from="E5" to="E2" begin="3600" end="10800" vehsPerHour="150" type="passenger"/>
    <flow id="f_2_spike_SURGE" from="E5" to="E2" begin="10800" end="14400" vehsPerHour="600" type="passenger"/>
    <flow id="f_2_spike_recovery" from="E5" to="E2" begin="14400" end="18000" vehsPerHour="300" type="passenger"/>
    <flow id="f_2_spike_evening" from="E5" to="E2" begin="18000" end="21600" vehsPerHour="150" type="passenger"/>

    <!-- Route Group 3: E9 to E13 -->
    <flow id="f_3_spike_early" from="E9" to="E13" via="E10 E11" begin="0" end="3600" vehsPerHour="80" type="passenger"/>
    <flow id="f_3_spike_buildup" from="E9" to="E13" via="E10 E11" begin="3600" end="10800" vehsPerHour="120" type="passenger"/>
    <flow id="f_3_spike_SURGE" from="E9" to="E13" via="E10 E11" begin="10800" end="14400" vehsPerHour="500" type="passenger"/>
    <flow id="f_3_spike_recovery" from="E9" to="E13" via="E10 E11" begin="14400" end="18000" vehsPerHour="250" type="passenger"/>
    <flow id="f_3_spike_evening" from="E9" to="E13" via="E10 E11" begin="18000" end="21600" vehsPerHour="120" type="passenger"/>

    <!-- Route Group 4: E13 to E9 -->
    <flow id="f_4_spike_early" from="E13" to="E9" via="E12 E11" begin="0" end="3600" vehsPerHour="80" type="passenger"/>
    <flow id="f_4_spike_buildup" from="E13" to="E9" via="E12 E11" begin="3600" end="10800" vehsPerHour="120" type="passenger"/>
    <flow id="f_4_spike_SURGE" from="E13" to="E9" via="E12 E11" begin="10800" end="14400" vehsPerHour="500" type="passenger"/>
    <flow id="f_4_spike_recovery" from="E13" to="E9" via="E12 E11" begin="14400" end="18000" vehsPerHour="250" type="passenger"/>
    <flow id="f_4_spike_evening" from="E13" to="E9" via="E12 E11" begin="18000" end="21600" vehsPerHour="120" type="passenger"/>

    <!-- Route Group 5: E0 to E8 -->
    <flow id="f_5_spike_early" from="E0" to="E8" begin="0" end="3600" vehsPerHour="80" type="passenger"/>
    <flow id="f_5_spike_buildup" from="E0" to="E8" begin="3600" end="10800" vehsPerHour="100" type="passenger"/>
    <flow id="f_5_spike_SURGE" from="E0" to="E8" begin="10800" end="14400" vehsPerHour="450" type="passenger"/>
    <flow id="f_5_spike_recovery" from="E0" to="E8" begin="14400" end="18000" vehsPerHour="200" type="passenger"/>
    <flow id="f_5_spike_evening" from="E0" to="E8" begin="18000" end="21600" vehsPerHour="100" type="passenger"/>

    <!-- Route Group 6: E8 to E0 -->
    <flow id="f_6_spike_early" from="E8" to="E0" begin="0" end="3600" vehsPerHour="80" type="passenger"/>
    <flow id="f_6_spike_buildup" from="E8" to="E0" begin="3600" end="10800" vehsPerHour="100" type="passenger"/>
    <flow id="f_6_spike_SURGE" from="E8" to="E0" begin="10800" end="14400" vehsPerHour="450" type="passenger"/>
    <flow id="f_6_spike_recovery" from="E8" to="E0" begin="14400" end="18000" vehsPerHour="200" type="passenger"/>
    <flow id="f_6_spike_evening" from="E8" to="E0" begin="18000" end="21600" vehsPerHour="100" type="passenger"/>

    <!-- Route Group 7: E1 to E14 -->
    <flow id="f_7_spike_early" from="E1" to="E14" begin="0" end="3600" vehsPerHour="60" type="passenger"/>
    <flow id="f_7_spike_buildup" from="E1" to="E14" begin="3600" end="10800" vehsPerHour="80" type="passenger"/>
    <flow id="f_7_spike_SURGE" from="E1" to="E14" begin="10800" end="14400" vehsPerHour="350" type="passenger"/>
    <flow id="f_7_spike_recovery" from="E1" to="E14" begin="14400" end="18000" vehsPerHour="150" type="passenger"/>
    <flow id="f_7_spike_evening" from="E1" to="E14" begin="18000" end="21600" vehsPerHour="80" type="passenger"/>

    <!-- Route Group 8: E14 to E1 -->
    <flow id="f_8_spike_early" from="E14" to="E1" begin="0" end="3600" vehsPerHour="60" type="passenger"/>
    <flow id="f_8_spike_buildup" from="E14" to="E1" begin="3600" end="10800" vehsPerHour="80" type="passenger"/>
    <flow id="f_8_spike_SURGE" from="E14" to="E1" begin="10800" end="14400" vehsPerHour="350" type="passenger"/>
    <flow id="f_8_spike_recovery" from="E14" to="E1" begin="14400" end="18000" vehsPerHour="150" type="passenger"/>
    <flow id="f_8_spike_evening" from="E14" to="E1" begin="18000" end="21600" vehsPerHour="80" type="passenger"/>

    <!-- Heavy vehicles - also surge during spike -->
    <flow id="f_truck_1_spike_normal" from="E2" to="E13" begin="0" end="10800" vehsPerHour="15" type="truck"/>
    <flow id="f_truck_1_spike_SURGE" from="E2" to="E13" begin="10800" end="14400" vehsPerHour="50" type="truck"/>
    <flow id="f_truck_1_spike_recovery" from="E2" to="E13" begin="14400" end="21600" vehsPerHour="20" type="truck"/>
    
    <flow id="f_bus_1_spike_normal" from="E0" to="E5" begin="0" end="10800" vehsPerHour="10" type="bus"/>
    <flow id="f_bus_1_spike_SURGE" from="E0" to="E5" begin="10800" end="14400" vehsPerHour="40" type="bus"/>
    <flow id="f_bus_1_spike_recovery" from="E0" to="E5" begin="14400" end="21600" vehsPerHour="15" type="bus"/>

</routes>
